<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="text">
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Small</item>
        <item name="android:textColor">@color/md_theme_onSurface</item>
    </style>

    <style name="text.light" parent="text">
        <item name="android:textColor">@color/md_theme_onSurfaceVariant</item>
    </style>

    <style name="text.headline" parent="text">
        <item name="android:textColor">@color/md_theme_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text.info" parent="text">
        <item name="android:textColor">@color/md_theme_onTertiaryContainer</item>
        <item name="drawableTint">@color/md_theme_onTertiaryContainer</item>
        <item name="android:drawablePadding">@dimen/space_horizontal_between</item>
    </style>

</resources>
